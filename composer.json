{
	"description": "Send SMS messages to your Free Mobile device.",
	"homepage": "https://docs.belin.io/free-mobile.php",
	"license": "MIT",
	"name": "cedx/free-mobile",
	"type": "library",
	"version": "18.0.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"freemobile\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"freemobile\\": "test/"}
	},
	"config": {
		"optimize-autoloader": true,
		"platform-check": false
	},
	"keywords": [
		"api",
		"client",
		"free",
		"mobile",
		"sms"
	],
	"require": {
		"php": ">=8.1.0",
		"ext-curl": "*",
		"ext-mbstring": "*",
		"ext-spl": "*",
		"nyholm/psr7": "^1.8.0",
		"psr/http-client": "^1.0.2"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10.40",
		"phpunit/phpunit": "^10.4.2"
	},
	"scripts": {
		"clean": "@php scripts/clean.php",
		"doc": "@php scripts/doc.php",
		"lint": "phpstan analyse --configuration=etc/phpstan.neon --memory-limit=256M",
		"publish": "@php scripts/publish.php",
		"test": ["@putenv XDEBUG_MODE=coverage", "phpunit --configuration=etc/phpunit.xml"]
	},
	"support": {
		"docs": "https://docs.belin.io/free-mobile.php",
		"issues": "https://github.com/cedx/free-mobile.php/issues"
	}
}
